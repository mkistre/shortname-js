{
  "compilerOptions": {
    "target": "es2017", 
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "Commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "resolveJsonModule": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": ["node_modules","test","**/*.test.ts"]
}
